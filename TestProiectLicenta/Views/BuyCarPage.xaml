<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    BackgroundColor="Black"
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TestProiectLicenta.BuyCarPage">
   <Grid HorizontalOptions="Center" Padding="20">
        
        <StackLayout Grid.Row="0">
            <Label Text="Buy a car" TextColor="White" FontSize="60"/>
        </StackLayout>
        
        <StackLayout Grid.Row="1">
            <Label Text="Image" TextColor="White" HorizontalOptions="Center"/>
            <Label Text="Search Via Photo" TextColor="White" HorizontalOptions="Center"/>
        </StackLayout>
            
        <StackLayout Grid.Row="2">
            <Button Text="Buy Manually" BackgroundColor="Green" TextColor="White" CornerRadius="8"/>
            <Button Text="Buy Via VIN" BackgroundColor="Green" TextColor="White" CornerRadius="8"/>
            <Button Text="Back" BackgroundColor="Gray" TextColor="White" CornerRadius="8" VerticalOptions="EndAndExpand"/>
        </StackLayout>
        
    </Grid>
</ContentPage>
