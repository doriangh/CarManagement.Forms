<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    Padding="20"
    BackgroundColor="Black" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="TestProiectLicenta.UserLoginPage">
    <Grid>
  
        
        <StackLayout Grid.ColumnSpan="3" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="introCar.png" Scale="0.6" BackgroundColor="Transparent"/>
            <Label Text="Car Management" TextColor="Cyan" HorizontalOptions="Center" FontSize="40" FontAttributes="Bold"/>
        </StackLayout>
        
        <StackLayout Grid.Row="3" Grid.Column="0" HorizontalOptions="Center">
            <Button Image="login.png" Clicked="LoginButton" BackgroundColor="Transparent"/>
            <Label Text="Log In" TextColor="White"/>
        </StackLayout>
        
        <StackLayout x:Name="retry" Grid.Row="3" Grid.Column="1" HorizontalOptions="Center" IsVisible="false">
            <Button Text="Try Again" Clicked="TryAgainButton"/>
        </StackLayout>
        
        <StackLayout Grid.Row="3" Grid.Column="2" HorizontalOptions="Center">
            <Button Image="add.png" Clicked="RegisterButton" BackgroundColor="Transparent"/>
            <Label Text="Sign Up" TextColor="White"/>
        </StackLayout>
        
        
    </Grid>
</ContentPage>
